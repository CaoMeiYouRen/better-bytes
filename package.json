{
  "name": "better-bytes",
  "version": "1.2.4",
  "description": "Better byte base conversion. Supports two base conversions: kilo binary byte (2^10) and kilobyte (10^3).\n更好的字节进制换算。支持 千位二进制字节(2^10) 和 千字节(10^3) 两种进制换算",
  "author": "CaoMeiYouRen",
  "private": false,
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "lint": "cross-env NODE_ENV=production eslint src --fix",
    "release": "semantic-release",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsup",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "dev:tsup": "cross-env NODE_ENV=development tsup --watch",
    "start": "node ./dist/index",
    "commit": "cz",
    "prepare": "husky install",
    "test": "jest --config jest.config.ts",
    "test:coverage": "jest --config jest.config.ts --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "commitizen": "^4.3.1",
    "commitlint-config-cmyr": "^1.0.0",
    "conventional-changelog-cmyr-config": "^3.0.0",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog-cmyr": "^2.0.0",
    "debug": "^4.4.3",
    "eslint": "^9.39.2",
    "eslint-config-cmyr": "^2.0.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "rimraf": "^6.1.2",
    "semantic-release": "21.0.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog-cmyr"
    }
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "keywords": [
    "byte",
    "bytes",
    "utility",
    "parse",
    "parser",
    "convert",
    "converter",
    "kilobyte",
    "kilo binary byte"
  ],
  "homepage": "https://github.com/CaoMeiYouRen/better-bytes#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/better-bytes.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/better-bytes/issues"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "pnpm": {
    "overrides": {
      "compare-func": "^2.0.0"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}